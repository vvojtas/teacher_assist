# .env.example - Example environment variables for Teacher Assist
# Copy this to .env and fill in your values

# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True

# AI Service Mode (mock or real)
# - mock: Returns random data from database (for testing, no API key needed)
# - real: Uses LangGraph workflow with OpenRouter LLM (requires API key)
AI_SERVICE_MODE=mock

# OpenRouter Configuration (required when AI_SERVICE_MODE=real)
# Get your key from https://openrouter.ai/keys
# Format: starts with prefix followed by characters (use your actual key)
AI_SERVICE_OPENROUTER_API_KEY=

# LLM Configuration
# See available models: https://openrouter.ai/models
AI_SERVICE_LLM_MODEL=anthropic/claude-3.5-haiku
AI_SERVICE_LLM_TEMPERATURE=0.7
AI_SERVICE_LLM_MAX_TOKENS=500
AI_SERVICE_LLM_TIMEOUT_SECONDS=30

# Database Configuration
AI_SERVICE_DATABASE_PATH=db.sqlite3
AI_SERVICE_DATABASE_TIMEOUT_SECONDS=10.0

# Prompt Templates
AI_SERVICE_PROMPT_TEMPLATE_DIR=ai_service/templates

# Workflow Configuration (Phase 2/3 features)
AI_SERVICE_MAX_RETRY_ATTEMPTS=0
AI_SERVICE_ENABLE_QUALITY_CHECKER=false
AI_SERVICE_ENABLE_AUTO_RETRY=false

# Cost Tracking
AI_SERVICE_PRICING_CACHE_TTL_SECONDS=3600
AI_SERVICE_FALLBACK_PROMPT_PRICE=0.00000025
AI_SERVICE_FALLBACK_COMPLETION_PRICE=0.00000125

# Django AI Service URL
AI_SERVICE_URL=http://localhost:8001
